{
  "name": "gawati-client",
  "version": "0.1.0",
  "author": {
    "name": "Ashok Hariharan",
    "email": "ashok+github@hariharan.org.in"
  },
  "private": true,
  "license": "AGPLV3",
  "dependencies": {
    "bootstrap": "^4.0.0-beta.3",
    "font-awesome": "^4.7.0",
    "i18next": "^10.2.2",
    "i18next-browser-languagedetector": "^2.1.0",
    "i18next-xhr-backend": "^1.5.1",
    "material-ui": "^1.0.0-beta.26",
    "moment": "^2.20.1",
    "node-sass-chokidar": "0.0.3",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-i18next": "^7.3.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.0.17",
    "react-tabs": "^2.1.1",
    "reactstrap": "^5.0.0-alpha.4",
    "simple-line-icons": "^2.4.1"
  },
  "main": "src/electron-starter.js",
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./scss --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./scss --include-path ./node_modules src/ -o src/ --watch --recursive",   
    "start": "nf start -p 3000",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-start": "node src/electron-wait-react",
    "react-start": "react-scripts start",
    "pack": "build --dir",
    "dist": "npm run build && build",
    "postinstall": "install-app-deps"
  },
  "build": {
    "appId": "org.gawati.client-app",
    "win": {
      "iconUrl": "https://cdn2.iconfinder.com/data/icons/designer-skills/128/react-256.png"
    },
    "directories": {
      "buildResources": "public"
    }
  },
  "devDependencies": {
    "electron": "^1.7.10",
    "electron-builder": "^19.50.0"
  }
}
